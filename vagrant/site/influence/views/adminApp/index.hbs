<!doctype html>
<html ng-app="influenceAdminApp">
<head>
    <meta charset="utf-8" />
    <title>Influence - Admin portal</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">

    <link rel="stylesheet" href="/admin/styles/style.css">

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="/admin/scripts/assets/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="/admin/scripts/assets/ie-emulation-modes-warning.js"></script>

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/admin/scripts/assets/ie10-viewport-bug-workaround.js"></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular-resource.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular-cookies.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular-route.min.js"></script>

    <script src="/admin/scripts/assets/angular-bootstrap-ui/0.11.0/angular-bootstrap-ui.min.js"></script>

    <script type="application/javascript" src="/admin/scripts/common/configGen.js"></script>
    <script type="application/javascript" src="/admin/scripts/common/constants.js"></script>

    <script type="application/javascript" src="/admin/scripts/common/session.js"></script>

    <script type="application/javascript" src="/admin/scripts/services/influenceAdminAppApiServices.js"></script>

    <script type="application/javascript" src="/admin/scripts/directives/menu.js"></script>
    <script type="application/javascript" src="/admin/scripts/directives/navi.js"></script>
    <script type="application/javascript" src="/admin/scripts/controllers/adminController.js"></script>
    <script type="application/javascript" src="/admin/scripts/app.js"></script>

    <script type="application/javascript">
        configGen(
                'influenceAdminApp.config',
                'influenceAdminAppConfig',
                {
                    DEBUG: false,
                    API : {
                        URL : "http://127.0.0.1:8888/api",
                        METHODS : {
                            ADMIN_LOGIN : "/auth/admin/login"
                        },
                        KEY : '{{config.app.key}}',
                        TENANT_ID    : '{{config.app.tenantId}}'
                    }
                }
        );
    </script>

</head>
<body ng-controller="influenceAdminAppCtrl as app">
    <loadingModalDirective show="app.showLoadingModal"></loadingModalDirective>
    <navi-directive></navi-directive>

    <div class="container-fluid" ng-view></div>

</body>
</html>